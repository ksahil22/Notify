<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faculty_main_ui.myprofile.MyprofileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:id="@+id/RL"
        android:background="@drawable/roundprofback"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MR ajay kapse"
        android:layout_below="@id/profile_pic"
        android:textAlignment="center"
        android:textSize="28dp"
        android:layout_marginTop="20dp"
        android:textColor="#27252B"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/profile_email"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myprofile_email"
        android:layout_below="@id/profile_name"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="#27252B"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/profile_department"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mechanical"
        android:layout_below="@id/profile_email"
        android:textAlignment="center"
        android:textColor="#27252B"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/profile_role"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Head of department"
        android:layout_below="@id/profile_department"
        android:textAlignment="center"
        android:textColor="#27252B"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/changepassword"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="#F08080"
        android:padding="10dp"
        android:textSize="20sp"
        android:id="@+id/password"
        android:layout_alignParentBottom="true"
        tools:ignore="InvalidId"
        />

</RelativeLayout>