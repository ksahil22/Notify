<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ViewNotice">


    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/view_notice_subject"
        android:text="subjectname"
        android:textStyle="bold"
        android:textColor="#3949AB"
        android:textSize="40dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/view_notice_summary"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="summary"
        android:textSize="15dp"
        android:textColor="#E4292727"
        android:layout_below="@id/view_notice_subject"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="#F8131212"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/view_notice_summary"
        android:id="@+id/view_notice_rel_date"
        android:layout_width="wrap_content"
        android:text="Relase date: 22/3/2020"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15dp"
        android:textColor="#F8131212"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:text="12:04 pm"
        android:layout_below="@id/view_notice_summary"
        android:id="@+id/time"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#F8131212"
        android:layout_width="wrap_content"
        android:text="Enddate: 12/3/2020"
        android:id="@+id/view_notice_end_date"
        android:layout_below="@id/view_notice_rel_date"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/view_notice_data"
        android:layout_width="250dp"
        android:layout_below="@id/view_notice_end_date"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_height="300dp"/>

    <LinearLayout
        android:layout_marginRight="0dp"
        android:id="@+id/VNlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/view_notice_end_date"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:background="#722574F0"
            android:text="pin"
            android:id="@+id/view_notice_pin"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/view_notice_download"
            android:padding="1dp"
            android:background="@drawable/notice_download"
            android:backgroundTint="#4559D6"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/view_notice_share"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="#722574F0"
            android:text="share"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/view_notice_remind"
            android:text="remind"
            android:background="#722574F0"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>